// mixins

/*============================================================================
  Dependency-free breakpoint mixin
    - http://blog.grayghostvisuals.com/sass/sass-media-query-mixin/
==============================================================================*/
$min: min-width;
$max: max-width;
@mixin at-query ($constraint, $viewport1, $viewport2:null) {
  @if $constraint == $min {
    @media screen and ($min: $viewport1) {
      @content;
    }
  } @else if $constraint == $max {
    @media screen and ($max: $viewport1) {
      @content;
    }
  } @else {
    @media screen and ($min: $viewport1) and ($max: $viewport2) {
      @content;
    }
  }
}

$viewportIncrement: 1px;
$siteWidth: 1050px;
$small: 590px;
$Regular: 768px;
$large: 769px;
$xlarge: $siteWidth + $viewportIncrement;

$postSmall: $small + $viewportIncrement;
$preRegular: $Regular - $viewportIncrement;
$preLarge: $large - $viewportIncrement;

/*================ The following are dependencies of csswizardry grid ================*/
$breakpoints: (
  'small' '(max-width: #{$small})',
  'Regular' '(min-width: #{$postSmall}) and (max-width: #{$Regular})',
  'Regular-down' '(max-width: #{$Regular})',
  'large' '(min-width: #{$large})'
);
$breakpoint-has-widths: ('small', 'Regular', 'Regular-down', 'large');
$breakpoint-has-push:  ('Regular', 'Regular-down', 'large');
$breakpoint-has-pull:  ('Regular', 'Regular-down', 'large');

@mixin clearfix() {
  &:after {
    content: '';
    display: table;
    clear: both;
  }
}

@mixin font-smoothing () {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

@mixin responsive-typo ( $min-size : 12, $max-size : 21, $min-width : 420, $max-width : 1280 ) {
  font-size: calc( #{$min-size + px} + #{$max-size - $min-size} * ( (100vw - #{$min-width + px}) / #{$max-width - $min-width}));
  @media screen and (max-width: $min-width + px ) {
    font-size :  $min-size + px;
  }
  @media screen and (min-width: $max-width + px) {
    font-size : $max-size + px;
  }
}

@mixin prefix($property, $value) {
  -webkit-#{$property}: #{$value};
  -moz-#{$property}: #{$value};
  -ms-#{$property}: #{$value};
  -o-#{$property}: #{$value};
  #{$property}: #{$value};
}

