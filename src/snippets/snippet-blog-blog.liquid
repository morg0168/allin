{% paginate blog.articles by settings.blog-articles-per-page %}

<div class="row blog-title">
  <div class="columns large-12">
    <h1 class="text text-centered" style="margin-bottom: 50px;text-transform:uppercase;">{{ blog.title }}</h1>
  </div> 
</div>

<div class="row"> 
  <!-- Begin content -->
  <div class="columns large-12">
    {% if blog.articles.size <= 0 %}
      <h2>No articles found...</h2>
    {% endif %}
    
    {% for article in blog.articles %}
    <div class="main-wrapper-blog clearfix">

        <h1 class="title"><a href="{{ article.url }}">{{ article.title }}</a></h1>
        <div class="content rte-content colored-links">
          {{ article.excerpt_or_content }}
        
          {% if article.excerpt != blank %}
          <p class="read-more"><a href="{{ article.url }}">Read more <span aria-hidden="true" class="glyph arrow-right"></span></a></p>
          {% endif %}
        </div>

    </div>
    {% endfor %}
  </div>

</div>
<!-- End content -->
<div class="row">
  <div class="right columns large-6">
    {% include 'snippet-pagination' %}
  </div>
</div>
{% endpaginate %}