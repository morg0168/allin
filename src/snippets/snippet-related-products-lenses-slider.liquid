
{% assign number_of_related_products_to_show = settings.product-similar-products-amount | to_number %}

{% capture number_of_related_products_to_fetch %}{{ number_of_related_products_to_show | plus: 1 }}{% endcapture %}

{% if collection == null or collection.handle == 'frontpage' or collection.handle == 'all' %}
  {% assign found_a_collection = false %}
  {% for c in product.collections %}
    {% if found_a_collection == false and c.handle != 'frontpage' and c.handle != 'all' %}
      {% assign found_a_collection = true %}
      {% assign collection = c %}
    {% endif %}
  {% endfor %}
{% endif %}

{% assign current_product_frame_option_of_lens_split  = product.title | split: ' - ' %}
{% assign current_product_frame_option_of_lens  = product_frame_option_of_lens_split[3] %}
{% assign current_product_title  = product.title %}

{% if collection and collection.products_count > 1 %}

      {% assign current_product = product %}
      {% assign current_product_found = false %}
      {% assign sunlenses_found = false %}
      {% assign optical_found = false %}

      {% for product in collection.products  %}

            {% assign product_frame_option_of_lens_split  = product.title | split: ' - ' %}
            {% assign product_frame_option_of_lens  = product_frame_option_of_lens_split[3] %}
            
            {% if current_product_frame_option_of_lens_split[3] == product_frame_option_of_lens_split[3] and current_product_frame_option_of_lens_split[1] == product_frame_option_of_lens_split[1]%}
            
              {% if current_product_frame_option_of_lens_split[2] == 'sun-lenses' and sunlenses_found == false %}

                {% include 'snippet-product-item-lenses-slider' with current_product_title %}
                {% assign sunlenses_found = true %}

              {% elsif current_product_frame_option_of_lens_split[2] == 'optical' and optical_found == false  %}

                {% include 'snippet-product-item-lenses-slider' with current_product_title %}
                {% assign optical_found = true %}

              {% else %}

              {% endif %}

            {% endif %}

      {% endfor %}

{% endif %}
