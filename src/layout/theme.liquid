<head>

  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="msvalidate.01" content="D427195FCB8521E09DE9726F555F48B0" />
  {% if settings.general-favicon-enabled %}
    <link rel="shortcut icon" type="image/png" href="{{ 'favicon.png' | asset_url }}" />
  {% endif %}

  {% if template == 'index' %}
    <title>{{ page_title }}</title>
  {% elsif template == '404' %}
    <title>Page Not Found | {{ shop.name }}</title>
  {% else %}
    <title>{{ page_title }} - {{ shop.name }}</title>
  {% endif %}

  {% if template contains 'product' %}
    <meta property="og:type" content="product" />
    <meta property="og:title" content="{{ product.title | strip_html | escape }}" />
    {% for image in product.images %}
    <meta property="og:image" content="http:{{ image.src | product_img_url: 'grande' }}" />
    <meta property="og:image:secure_url" content="https:{{ image.src | product_img_url: 'grande' }}" />
    {% endfor %}
    <meta property="og:price:amount" content="{{ product.price | money_without_currency }}" />
    <meta property="og:price:currency" content="{{ shop.currency }}" />
  {% elsif template contains 'article' %}
    <meta property="og:type" content="article" />
    <meta property="og:title" content="{{ article.title | strip_html | escape }}" />
    {% assign img_tag = '<' | append: 'img' %}
    {% if article.content contains img_tag %}
      {% assign src = article.content | split: 'src="' %}
      {% assign src = src[1] | split: '"' | first | remove: 'https:' | remove: 'http:' %}
      {% if src %}
        <meta property="og:image" content="http:{{ src }}" />
        <meta property="og:image:secure_url" content="https:{{ src }}" />
      {% endif %}
    {% endif %}
  {% elsif {{page_title}} contains 'Lookbook' %}
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ page_title | escape }}" />
      <meta property="og:image" content="https://cdn.shopify.com/s/files/1/0525/3729/files/lookbook1_acbc5ae4-1a8c-4dd7-8663-f54738dc8c49.jpg?10874170462563898435" />
      <meta property="og:image:secure_url" content="https://cdn.shopify.com/s/files/1/0525/3729/files/lookbook1_acbc5ae4-1a8c-4dd7-8663-f54738dc8c49.jpg?10874170462563898435" />
  {% else %}
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ page_title | escape }}" />
      <meta property="og:image" content="http:{{ 'logo_large.png' | asset_url }}" />
      <meta property="og:image:secure_url" content="https:{{ 'logo_large.png' | asset_url }}" />
  {% endif %}

  {% if page_description %}
  <meta name="description" content="{{ page_description }}" />
  {% endif %}

  <link href='https://fonts.googleapis.com/css?family=Yantramanav:400' rel='stylesheet' type='text/css'>

  <link rel="canonical" href="{{ canonical_url }}" />

  {% include 'snippet-fb-open-graph-tags' %}

  {% include 'snippet-webfont' %}

  {{ content_for_header }}

  {% if template == 'index' %}
    {{ 'flexboxgrid.min.css' | asset_url | stylesheet_tag }}
    {{ 'theme.scss.css' | asset_url | stylesheet_tag }}
    {{ 'app.scss.css' | asset_url | stylesheet_tag }}
  {% else %}
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  {{ 'flexboxgrid.min.css' | asset_url | stylesheet_tag }}
    {{ 'jquery.bxslider.css' | asset_url | stylesheet_tag  }}
    {{ 'swiper.min.css' | asset_url | stylesheet_tag  }}
    {{ 'close.css' | asset_url | stylesheet_tag  }}
      {{ 'app.scss.css' | asset_url | stylesheet_tag }}
  {% endif %}

  {% if template == 'page.capsule' %}
    {{ 'flexboxgrid.min.css' | asset_url | stylesheet_tag }}
  {% else %}
  {% endif %}


  <!--[if lt IE 8]>
    {{ 'json2.js' | asset_url | script_tag }}
  <![endif]-->

  <!--[if lt IE 9]>
  {{ '//html5shim.googlecode.com/svn/trunk/html5.js' | script_tag }}
  {{ 'dd_roundies.js' | asset_url | script_tag }}
  <script>
  DD_roundies.addRule('.circle', '45px');
  </script>
  <![endif]-->

  {{ 'custom.modernizr.js' | asset_url | script_tag }}
  {{ '//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js' | script_tag }}
  {{ '//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js' | script_tag }}
{% comment %}  {{ '//ajax.googleapis.com/ajax/libs/jquerymobile/1.4.5/jquery.mobile.min.js' | script_tag }}{% endcomment %}

  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}

  {% if template contains 'customers' %}
    {{ 'customer.css' | asset_url | stylesheet_tag }}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
    {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}

  <script>
    var twitterID = '{{ settings.twitter_username }}',
    shop_url = '{{ shop.url }}',
    home_slider_auto_enabled = {{ settings.home-slider-auto-enabled }},
    home_slider_rotate_frequency = {{ settings.home-slider-rotate-frequency }},
    product_zoom_enabled = {{ settings.product-zoom-enabled }},
    product_modal_enabled = {{ settings.product-modal-enabled }};
  </script>

  <script type="text/javascript">
    window.smartlook||(function(d) {
    var o=smartlook=function(){ o.api.push(arguments)},h=d.getElementsByTagName('head')[0];
    var c=d.createElement('script');o.api=new Array();c.async=true;c.type='text/javascript';
    c.charset='utf-8';c.src='//rec.smartlook.com/recorder.js';h.appendChild(c);
    })(document);
    smartlook('init', '9d7f3a76654b0a0f421d51f1758b2d879cd89331');
</script>

</head>


<body {% if page.template_suffix == 'fullscreen' and page.content contains "<img" %}
  {% assign image_src = page.content | split: 'src="' %}
  {% assign image_src = image_src[1] | split: '"' | first | replace: '//cdn', 'http://cdn'; | replace: 'http:http://';, 'http://'; | remove: 'https:' %}
  style="background-image:url({{ image_src }});"
{% endif %} class="{% if page.template_suffix == 'fullscreen' %}white-header fullscreen-image{% endif %} page-{{ page_title | handle }} {% if customer %}customer-logged-in {% endif %}template-{{ template | split: '.' | first | remove: '/' | remove: '_' }}{% if settings.home-slider-show and template == 'index' and settings.home-slider-below-menu == false %} transparent-menu{% endif %}">

  <section class="main-content" style="min-heigh: 0;">

    {{ content_for_layout }}

  </section>

  {{ 'swiper.jquery.min.js' | asset_url | script_tag }}
  {{ 'jquery.countdown.min.js' | asset_url | script_tag }}
  {{ 'jquery.bxslider.min.js' | asset_url | script_tag }}
  {{ 'jquery.sticky.js' | asset_url | script_tag }}
  {{ 'plugins.js' | asset_url | script_tag }}
  {{ 'shop.js' | asset_url | script_tag }}
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  {{ 'allin.js' | asset_url | script_tag }}

  {% if settings.show_multiple_currencies %}
    {{ '/services/javascripts/currencies.js' | script_tag }}
    {{ 'jquery.currencies.min.js' | asset_url | script_tag }}
    {% include 'snippet-currencies' %}
  {% endif %}


</body>
</html>
